<%- include('./components/header') %>
<body>
    <%- include('./components/navigation') %>

    <div class="container" style="margin-top: 30px;">
        <div class="row">
            <div class="col-lg-3">
                <h3>Add category</h3>
                <form id="add_category_form" action="/functions/add_category" method="POST">
                    <label class="form-label">Category Name</label>
                    <input type="text" name="CategoryName" class="form-control">

                    <label class="form-label">Category Image</label>
                    <input type="text" name="CategoryMainImage" class="form-control">
                    <button form="add_category_form" type="submit" class="btn btn-primary" style="width: 100%; margin-top: 12px;">Create New Category</button>
                </form>
            </div>
            <div class="col-lg-9">
                <% if(categories.length>0) {%>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category Image</th>
                                <th>Category Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let category of categories){%>
                                <tr>
                                    <td><%= category.id %></td>
                                    <td><a href="/products/<%= category.id %>"><img src="<%= category.CategoryMainImage %>" alt="" style="height: 50px;"></a></td>
                                    <td ><a href="/products/<%= category.id %>"><%= category.CategoryName %></a></td>
                                    <td>
                                        <form action="delete_category" method="post"></form>
                                        <a href="/delete_category/<%= category.id %>" class="btn btn-danger">Delete</a>
                                        <a href="/functions/edit_category/<%= category.id %>" class="btn btn-warning">Edit</a>
                                    </td>
                                </tr>
                            <%} %>
                    </table>
                <% }else{ %>
                <% } %>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>